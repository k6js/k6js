{
  "name": "@k6js/mono-repo",
  "description": "K6JS monorepo for all the @k6js packages",
  "private": true,
  "version": "0.0.0",
  "author": "The K6JS Development Team",
  "license": "MIT",
  "repository": "https://github.com/k6js/k6js",
  "homepage": "https://github.com/k6js/k6js",
  "scripts": {
    "coverage": "jest --coverage",
    "format:file": "prettier --write",
    "format": "prettier --write \"**/*.{js,json,ts,tsx,md,mdx}\"",
    "ci:version-packages": "pnpm changeset version && cd docs && pnpm remove-conditionals",
    "lint:eslint": "eslint",
    "lint:prettier": "prettier --check \"**/*.{js,json,ts,tsx,md,mdx}\"",
    "lint:types": "tsc",
    "lint": "pnpm lint:prettier && pnpm lint:eslint && pnpm lint:types && pnpm lint:filters",
    "build": "preconstruct build",
    "prepare1": "manypkg check && preconstruct dev",
    "prepare": "preconstruct dev",
    "update": "manypkg upgrade",
    "changeset": "changeset",
    "publish-changed": "pnpm build && changeset publish --public",
    "version-packages": "changeset version"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "manypkg": {
    "defaultBranch": "main"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "packages/**/*.{js,ts,tsx}",
      "!**/*.d.ts",
      "!packages/**/dist/**",
      "!packages/core/src/fields/**/test-fixtures.{js,ts}"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.25.0",
    "@babel/plugin-transform-runtime": "^7.25.0",
    "@babel/preset-env": "^7.25.0",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.7",
    "@eslint/js": "^9.27.0",
    "@manypkg/cli": "^0.24.0",
    "@preconstruct/cli": "2.8.12",
    "@types/jest": "^29.5.14",
    "@types/node-fetch": "^2.6.12",
    "eslint": "^9.27.0",
    "eslint-plugin-react-hooks": "5.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "patch-package": "^6.5.1",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "packageManager": "pnpm@10.15.1+sha512.34e538c329b5553014ca8e8f4535997f96180a1d0f614339357449935350d924e22f8614682191264ec33d1462ac21561aff97f6bb18065351c162c7e8f6de67"
}
