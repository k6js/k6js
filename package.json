{
  "name": "@k6js/mono-repo",
  "description": "K6JS monorepo for all the @k6js packages",
  "private": true,
  "version": "0.0.0",
  "author": "The K6JS Development Team",
  "license": "MIT",
  "repository": "https://github.com/k6js/k6js",
  "homepage": "https://github.com/k6js/k6js",
  "scripts": {
    "coverage": "jest --coverage",
    "format:file": "prettier --write",
    "format": "prettier --write \"**/*.{js,json,ts,tsx,md,mdx}\"",
    "ci:version-packages": "yarn changeset version && cd docs && yarn remove-conditionals",
    "lint:eslint": "eslint",
    "lint:prettier": "prettier --check \"**/*.{js,json,ts,tsx,md,mdx}\"",
    "lint:types": "tsc",
    "lint": "yarn lint:prettier && yarn lint:eslint && yarn lint:types && yarn lint:filters",
    "build": "preconstruct build",
    "prepare1": "manypkg check && preconstruct dev",
    "prepare": "preconstruct dev",
    "update": "manypkg upgrade",
    "changeset": "changeset",
    "publish-changed": "yarn build && changeset publish --public",
    "version-packages": "changeset version"
  },
  "workspaces": {
    "packages": [
      "examples/*",
      "examples/*/*",
      "packages/*"
    ]
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "manypkg": {
    "defaultBranch": "main"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "packages/**/*.{js,ts,tsx}",
      "!**/*.d.ts",
      "!packages/**/dist/**",
      "!packages/core/src/fields/**/test-fixtures.{js,ts}"
    ]
  },
  "resolutionsttttt": {
    "react": "npm:^19.1.0",
    "react-dom": "npm:^19.1.0",
    "next": "npm:^15.3.3",
    "@keystar/ui": "npm:0.7.19",
    "@keystone-6/fields-document": "npm:0.0.0-rc-20250618053610",
    "@keystone-6/core": "npm:@k6js-next/core-next@0.0.0-20250618-02",
    "@keystone-6/auth": "npm:@k6js-next/auth-next@0.0.0-20250618-02"
  },
  "devDependencies": {
    "@babel/core": "^7.25.0",
    "@babel/plugin-transform-runtime": "^7.25.0",
    "@babel/preset-env": "^7.25.0",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.7",
    "@eslint/js": "^9.27.0",
    "@manypkg/cli": "^0.24.0",
    "@preconstruct/cli": "2.8.12",
    "@types/jest": "^29.5.14",
    "@types/node-fetch": "^2.6.12",
    "eslint": "^9.27.0",
    "eslint-plugin-react-hooks": "5.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "patch-package": "^6.5.1",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  }
}
